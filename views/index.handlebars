<div class="container">
    <div class="jumbotron">
        <img src="assets/img/bobsburgers.logo.png" alt="Bob's Burgers Logo">
    </div>
    <div class="row">
        <div class="col">
            <h2>Some Ideas:</h2>
            <h4>Sweet Home Avocado Burger</h4>
            <h4>Hit Me with Your Best Shallot Burger</h4>
            <h4>New Bacon-ings Burger</h4>
            <h4>Bruchetta 'Bout It Burger</h4>
            <h4>Eggers Can't Be Cheesers Burger</h4>
        </div>
    </div>
    <div class="row">
        <div class="col" id="notDevouredCol">
            <h2>To Eat: </h2>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        <li>
	                        {{name}}

	                        <button class="change-eaten" data-id="{{id}}" data-devoured="{{devoured}}">
	                        </button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col" id="fieldCol">
            <h2>Add a Burger!</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burgerName">Burger Name:</label>
                    <input type="text" id="burgerName" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>

        </div>
        <div class="col" id="devouredCol">
           
            <h2>Devoured: </h2>

            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        {{id}} + " " + {{name}}
                    {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>

